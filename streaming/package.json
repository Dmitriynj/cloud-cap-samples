{
  "name": "streaming",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^4",
    "express": "^4",
    "multiparty": "^4.2.2",
    "passport": "^0.4.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "sqlite3": "^5"
  },
  "scripts": {
    "start:dev": "cds deploy --to sqlite:streaming.db && cd ../ && cds run streaming NODE_ENV=development",
    "start": "npx cds run"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "streaming.db"
        }
      },
      "auth": {
        "passport": {
          "strategy": "mock",
          "users": {
            "some": {
              "password": "1234",
              "ID": "some",
              "roles": [
                "authenticated-user"
              ]
            }
          }
        }
      }
    }
  }
}
